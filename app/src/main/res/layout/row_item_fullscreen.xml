<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/region"
        style="@style/Region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Region"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/currentPrice"
        style="@style/CurrentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Current"
        android:textColor="@android:color/black"
        android:layout_below="@+id/region"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/lowPrice"
        style="@style/LowPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:text="Low"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/currentPrice"
        android:layout_alignStart="@+id/seekBar" />

    <TextView
        android:id="@+id/highPrice"
        style="@style/HighPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="High"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/lowPrice"
        android:layout_alignBottom="@+id/lowPrice"
        android:layout_alignEnd="@+id/seekBar" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_weight="1"
        android:background="@drawable/seekbar_gradient"
        android:max="100"
        android:progressBackgroundTint="@color/colorTransparent"
        android:progressTint="@color/colorTransparent"
        android:layout_below="@+id/lowPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        app:seriesColor="@color/colorBlack"
        app:seriesType="line"
        android:layout_above="@+id/updated"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/updated"
        style="@style/Updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/message"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Updated"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>